# Application
APP_NAME=NestJS Laravel Structure
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:3000
APP_PORT=3000

# Database
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=nestjs_app
DB_USERNAME=root
DB_PASSWORD=secret
DB_CONNECTION_LIMIT=70

# Prisma Database URL（注意替换正确用户名密码）
DATABASE_URL="mysql://root:secret@localhost:3306/nestjs_app"

# JWT
JWT_SECRET=215e49c2fe4fba0c31ded9bfdad8af35
JWT_EXPIRES_IN=1d

# EMAIL (AWS SES)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-southeast-2
AWS_BUCKET=your-bucket-name
AWS_SES_FROM_EMAIL=no-reply@yourdomain.com

# Redis（单机开发环境配置）
REDIS_ClUSTER=false
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=86400
REDIS_PREFIX=nestjs_app_

# Cache（如不使用 cache，可保持为空）
CACHE_DRIVER=redis

# Session（如需使用 express-session 可设为 redis/file 等）
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Queue（如使用 bull）
QUEUE_CONNECTION=redis

# 表格默认分页数量
TABLE_DEFAULT_PER_PAGE=30